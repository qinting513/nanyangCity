.mine {
  box-sizing: border-box;
  overflow-y: scroll;
  overflow-x: hidden;
  height: calc(100vh - 50px);
  width: 100vw;
}
.mine::-webkit-scrollbar {
  display: none;
}
.mine .topView {
  position: relative;
}
.mine .topView .topBackImg {
  width: 100%;
  height: 53vw;
}
.mine .topView .setting {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  width: 60rpx;
  height: 60rpx;
}
.mine .topView .avatarView {
  position: absolute;
  top: 100rpx;
  width: 100%;
  height: 150rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-left: 40rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.mine .topView .avatarView image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
}
.mine .topView .avatarView text {
  margin-left: 20rpx;
  color: white;
  font-size: 18px;
}
.mine .topView .avatarView .user {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.mine .topView .mainBtnView {
  position: relative;
  top: -100rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: white;
  height: 180rpx;
  border-radius: 5px;
  box-shadow: 1px 1px 5px #DDD;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.mine .topView .mainBtnView .item {
  width: 25%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.mine .topView .mainBtnView .item image {
  width: 60rpx;
  height: 60rpx;
}
.mine .topView .mainBtnView .item text {
  margin-top: 10rpx;
  font-size: 15px;
}
.mine .listView {
  margin-top: -80rpx;
}
.mine .listView .section .title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-left: 20rpx;
  font-size: 16px;
  height: 100rpx;
  border-bottom: 1px solid #e6e6e6;
}
.mine .listView .section .title image {
  width: 18rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

